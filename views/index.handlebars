<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      {{#each articles}}
        <div class="panel panel-default">
          <div class="panel-heading row">
            <div class="col-xs-9">
              <h2 class="panel-title pull-left">{{this.title}}</h2>
            </div>
            
          </div>
              <div class="panel-body">
                <p>{{this.link}}</p>

                <div class="col-xs-3">
                  <form action="/save" method="POST">
                    <input id="article-title" type="hidden" name="title" value="{{this.title}}">
                    <input id="article-link" type="hidden" name="link" value={{this.link}}>
                  <button type="submit" class="btn btn-primary pull-left">SAVE ARTICLE</button>
                </form>
              </div>
            </div>
        </div>
